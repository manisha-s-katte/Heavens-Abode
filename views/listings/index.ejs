<%layout("/layouts/boilerplate") %>

<style>
  #filters{
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }

  .filter{
    flex:1 0 auto;
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
  }

  .filter:hover{
    opacity: 1;
    cursor: pointer;
  } 

  .filter p{
    font-size: 0.8rem;
  }

  .taxInfo{
    display: none;
  }

  a{
    text-decoration: none !important;
    color: black !important;
  }
  
  .taxToggle{
    display:inline-block;
    border : 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    /* margin-left: 5rem; */
    display: flex;
    align-items: center;
  }

</style>
<div id="filters">
  <a href="/listings?category=Trending" class="filter">
   <div> <i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>  
  </a>
  <a href="/listings?category=Rooms" class="filter">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </a>
<a href="/listings?category=Iconic%20Cities" class="filter">
  <div><i class="fa-solid fa-mountain-city"></i></div>
  <p>Cities</p>
</a>
<a href="/listings?category=Mountains" class="filter">
  <div><i class="fa-solid fa-mountain-sun"></i></div>
  <p>Mountains</p>
</a>
<a href="/listings?category=Amazing%20Pools" class="filter">
  <div><i class="fa-solid fa-person-swimming"></i></div>
  <p>Resorts & Pools</p>
</a>
<a href="/listings?category=Camping" class="filter">
  <div><i class="fa-solid fa-tents"></i></div>
  <p>Camping</p>
</a>
<a href="/listings?category=Farms" class="filter">
  <div><i class="fa-solid fa-cow"></i></div>
  <p>Farms</p>
</a>
<a href="/listings?category=Arctic" class="filter">
  <div><i class="fa-solid fa-snowflake"></i></div>
  <p>Arctic</p>
</a>

<a href="/listings?category=Boats" class="filter">
  <div><i class="fa-solid fa-ship"></i></div>
  <p>HouseBoats</p>
</a>
<div class="taxToggle">
  <div class="form-check-reverse form-switch">
    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
    <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
  </div>
</div>
</div>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for (listing of listings){ %>
  <a href="/listings/<%=listing._id%>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%=listing.title%></b> <br />
          &#8377;<%=listing.price.toLocaleString("en-IN") %> / night
          <i class="taxInfo">&nbsp; +18% GST</i>
        </p>
      </div>
    </div>
    <% } %>
  </a>
</div>

<script>
  let priceSwitch = document.getElementById("flexSwitchCheckDefault");
  priceSwitch.addEventListener("click",()=>{
    let taxInfo = document.getElementsByClassName("taxInfo");
    for(info of taxInfo){
      if(info.style.display != "inline"){
        info.style.display = "inline";
      }else info.style.display = "none"
    }
  });


  </script>